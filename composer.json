{
    "name": "nilportugues/serializer-eloquent",
    "type": "library",
    "description": "Eloquent Driver for NilPortugues Serializer outputting valid API responses in JSON, JSON API and HAL+JSON API formats.",
    "keywords": ["laravel", "eloquent", "orm", "nilportugues", "json", "api", "jsonapi", "serializer", "transformer", "psr7", "response"],
    "homepage": "http://nilportugues.com",
    "license": "MIT",
    "authors": [
        {
            "name": "Nil Portugués Calderó",
            "email": "contact@nilportugues.com",
            "role": "Project Lead Developer"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "nilportugues/serializer": "*",
        "illuminate/database": "*",
        "illuminate/pagination": "*"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.4",
        "friendsofphp/php-cs-fixer": ">=1.9"
    },
    "autoload": {
        "psr-4": {
            "NilPortugues\\Serializer\\Drivers\\Eloquent\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "NilPortugues\\Tests\\Serializer\\Drivers\\Eloquent\\": "tests/"
        }
    },
    "config": {
        "bin-dir": "bin/"
    }
}
